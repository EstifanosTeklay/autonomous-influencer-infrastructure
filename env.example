# ============================================================================
# Project Chimera: Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# 
# IMPORTANT: Never commit .env file to git (it contains secrets)
# ============================================================================

# ==============================================================================
# Database Configuration
# ==============================================================================

# PostgreSQL
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://chimera:your_secure_password_here@localhost:5432/chimera

# Redis
REDIS_URL=redis://localhost:6379

# Weaviate
WEAVIATE_URL=http://localhost:8080

# ==============================================================================
# LLM API Keys
# ==============================================================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI (GPT models, embeddings)
OPENAI_API_KEY=sk-proj-...

# Google (Gemini)
GOOGLE_API_KEY=AIzaSy...

# ==============================================================================
# Social Media Platform APIs
# ==============================================================================

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# Instagram API
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_id

# TikTok API
TIKTOK_ACCESS_TOKEN=your_tiktok_token
TIKTOK_CLIENT_KEY=your_client_key

# ==============================================================================
# Content Generation APIs
# ==============================================================================

# Ideogram (Image generation)
IDEOGRAM_API_KEY=your_ideogram_key

# Runway (Video generation)
RUNWAY_API_KEY=your_runway_key

# Luma AI (Video generation)
LUMA_API_KEY=your_luma_key

# ==============================================================================
# Blockchain / Wallet Configuration
# ==============================================================================

# Coinbase AgentKit
CDP_API_KEY_NAME=your_cdp_key_name
CDP_API_KEY_PRIVATE_KEY=your_cdp_private_key

# Network (mainnet, testnet, etc.)
BLOCKCHAIN_NETWORK=base-sepolia

# ==============================================================================
# News & Data APIs
# ==============================================================================

# News API
NEWSAPI_KEY=your_newsapi_key

# Google News
GOOGLE_NEWS_API_KEY=your_google_news_key

# ==============================================================================
# Application Configuration
# ==============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_for_jwt_signing_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (for dashboard API)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ==============================================================================
# Agent Configuration
# ==============================================================================

# Budget limits
DEFAULT_DAILY_BUDGET_USD=50.0
MAX_AGENT_BUDGET_USD=500.0

# Rate limits
MAX_POSTS_PER_HOUR=10
MAX_CONCURRENT_WORKERS=50

# Confidence thresholds
AUTO_APPROVE_THRESHOLD=0.90
HITL_THRESHOLD=0.70

# ==============================================================================
# MCP Configuration (Optional - if using remote MCP servers)
# ==============================================================================

# Custom MCP server URLs
MCP_NEWS_SERVER_URL=http://localhost:3001
MCP_TWITTER_SERVER_URL=http://localhost:3002

# ==============================================================================
# Monitoring & Observability (Optional)
# ==============================================================================

# Sentry (error tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project

# Prometheus (metrics)
PROMETHEUS_PORT=9090

# Grafana (dashboards)
GRAFANA_PORT=3000

# ==============================================================================
# Development Tools
# ==============================================================================

# Enable debug mode
DEBUG=true

# Enable hot reload
HOT_RELOAD=true

# Disable certain features for faster dev
SKIP_WEAVIATE_INIT=false
SKIP_MIGRATION=false

# ==============================================================================
# Testing Configuration
# ==============================================================================

# Test database
TEST_DATABASE_URL=postgresql://chimera:test_password@localhost:5432/chimera_test

# Mock API responses (for testing without real API calls)
MOCK_ANTHROPIC=false
MOCK_OPENAI=false
MOCK_TWITTER=true
MOCK_INSTAGRAM=true

# ==============================================================================
# Notes
# ==============================================================================
#
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual API keys and passwords
# 3. NEVER commit .env to git (it's in .gitignore)
# 4. For production, use secret management tools (AWS Secrets Manager, Vault)
# 5. Rotate keys regularly
# 6. Use different keys for dev/staging/production
#
# ==============================================================================
